<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="scouting2017.salinerobotics.org.a2017scoutingapp.MainMenu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/hdrMain"
            android:background="?attr/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:text="@string/main_menu_mainTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMain"
            android:textSize="32sp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textPersonName"
            android:ems="10"
            android:id="@+id/txtboxUsername"
            android:hint="@string/main_menu_lblUsername" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtboxTeamNum"
            android:hint="@string/main_menu_lblPassword" />

        <Button
            android:text="Scout"
            android:layout_height="wrap_content"
            android:id="@+id/btnScout"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:onClick="onButtonScouting (MainMenu)" />

        <Button
            android:text="Robot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRobot" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

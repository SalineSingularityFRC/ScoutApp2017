<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scouting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="scouting2017.salinerobotics.org.a2017scoutingapp.Scouting">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtScoutingDirections"
        android:layout_weight="0.05"
        android:text="@string/scouting_activity_instructions"
        android:layout_height="100dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_width="200dp"
        android:id="@+id/layoutLeft"
        android:layout_marginRight="200dp"
        android:layout_marginTop="105dp">

        <Button
            android:text="Start of Match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartOfMatch"
            android:layout_weight="0.05"
            android:onClick="onStartMatchClick (Scouting)" />

        <Button
            android:text="Autonomous Mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAuton"
            android:layout_weight="0.05"
            android:onClick="onAutonClick (Scouting)" />

        <Button
            android:text="Gear Placed on Peg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGearOnPeg"
            android:layout_weight="0.05"
            android:onClick="onGearClick (Scouting)" />

        <Button
            android:text="Ball Scored - Low Goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBallScoredLow"
            android:onClick="onLowGoalClick (Scouting)" />

        <Button
            android:text="Ball Scored - High Goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBallScoredHigh"
            android:layout_weight="0.05"
            android:onClick="onHighGoalClick (Scouting)" />

        <Button
            android:text="Climbed Rope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRopeClimb"
            android:layout_weight="0.05"
            android:onClick="onClimbClick (Scouting)" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginLeft="200dp"
        android:id="@+id/layoutRight"
        android:layout_marginTop="105dp">

        <Button
            android:text="Undo Gear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUndoGear"
            android:layout_marginTop="115dp" />

        <Button
            android:text="Undo Low Goal Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUndoLowGoal"
            android:layout_marginTop="5dp" />

        <Button
            android:text="Undo High Goal Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUndoHighGoal"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <Button
        android:text="Finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnFinish"
        android:layout_weight="0.05"
        android:onClick="onFinishClick (Scouting)"
        android:layout_marginTop="525dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtboxComments"
        android:layout_weight="0.05"
        android:hint="Comments:"
        android:layout_marginTop="485dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtboxPenalties"
        android:layout_weight="0.05"
        android:hint="Penalties:"
        android:layout_marginTop="445dp" />
</RelativeLayout>
